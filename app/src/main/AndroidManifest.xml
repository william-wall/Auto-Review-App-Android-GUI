        <activity android:name=".user.AdministrationUserOld"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".review.AdministrationReview"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainMenu" />
        <activity android:name=".MainMenuUser" />
        <activity android:name=".HomeScreen" />
        <activity android:name=".user.UserDetail" />
        <activity android:name=".review.ReviewDetail" />
        <activity android:name=".weather.Weather"

            />
        <activity android:name=".firebase.MainActivityFirebase" />
        <activity android:name=".firebase.LoginActivityFirebase" />
        <activity android:name=".firebase.SignupActivityFirebase" />
        <activity android:name=".firebase.ResetPasswordActivityFirebase" />
    </application>

</manifest>